<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_view"
        android:text="注册观察者"
        />

    <EditText
        android:id="@+id/tag_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@id/reg_btn"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/reg_btn"
        android:hint="输入TAG"
        />

    <Button
        android:id="@+id/publish_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@id/reg_btn"
        android:layout_below="@id/reg_btn"
        android:text="发布消息"/>

    <EditText
        android:id="@+id/message_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@id/publish_btn"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/publish_btn"
        android:hint="输入消息"
        />


</RelativeLayout>